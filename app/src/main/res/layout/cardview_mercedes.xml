<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgMercedesKapak"
                android:layout_width="@dimen/widht100dp"
                android:layout_height="@dimen/height100dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:layout_marginBottom="@dimen/margin16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtMercedesAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:textColor="#C5C501"
                android:textSize="@dimen/textsize15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgMercedesKapak"
                app:layout_constraintTop_toTopOf="@+id/imgMercedesKapak"
                tools:text="Mercedes Model" />

            <TextView
                android:id="@+id/txtFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtMercedesAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtMercedesAdi"
                tools:text="Fiyat" />

            <TextView
                android:id="@+id/txtYilCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_marginEnd="@dimen/margin189"
                android:layout_marginBottom="@dimen/margin28dp"
                android:text="Yil"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgMercedesKapak"
                app:layout_constraintTop_toBottomOf="@+id/txtFiyat"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtBeygirCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin45dp"
                android:layout_marginEnd="@dimen/margin156dp"
                android:text="beygir"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMercedesAdi" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>