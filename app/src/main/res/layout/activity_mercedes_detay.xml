<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MercedesDetayActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgKapak"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height200dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txtModelAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10dp"
                android:text="Model Adi"
                android:textColor="@color/gold"
                android:textSize="@dimen/textsize30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10dp"
                android:text="Detay"
                android:textSize="@dimen/textsize25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtModelDetayi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10dp"
                android:text="Model HakkÄ±nda"
                android:textColor="@color/gold"
                android:textSize="@dimen/textsize30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBeygir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:text="Beygir"
                android:textSize="@dimen/textsize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtYil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:text="Yil"
                android:textSize="@dimen/textsize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVitesTipi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:text="Vites"
                android:textSize="@dimen/textsize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtYakitTipi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/marginbottom5dp"
                android:text="Yakit"
                android:textSize="@dimen/textsize20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>